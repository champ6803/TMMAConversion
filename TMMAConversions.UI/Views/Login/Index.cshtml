@section Styles {
    <style type="text/css">
        .list-group-item {
            margin: 0 !important;
            border: 0;
        }

        .btn-no-radius {
            border-radius: 0;
        }
    </style>
}

<!-- Login Section -->
<section ng-controller="loginController" class="login-section" ng-init="init()">
    <div class="row">
        <div class="col-md-offset-4 col-md-4 col-xs-offset-3 col-xs-6">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <h1 class="panel-title"><i class="fa fa-user"></i> Login</h1>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal form-element">
                        <div class="row">
                            <div class="col-md-12 text-center m-b-10">
                                <img class="unlock-img" src="~/Images/lock-icon-png-54.png" />
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div ng-class="ErrorUserModel.Username ? 'has-error' : ''" class="form-group row">
                                    <label for="txt_user_sap" class="col-sm-4 control-label">
                                         Username <span style="color: red;">*</span> :
                                    </label>
                                    <div class="col-sm-8">
                                        <input ng-keypress="checkIfEnterKeyWasPressed($event, UserModel)" id="txt_username" ng-model="UserModel.Username" type="text" class="form-control" />
                                        <span ng-show="ErrorUserModel.Username" class="help-block">{{ErrorUserModel.Username}}</span>
                                    </div>
                                </div>
                                <div ng-class="ErrorUserModel.Password ? 'has-error' : ''" class="form-group row">
                                    <label for="txt_password" class="col-sm-4 control-label">
                                         Password <span style="color: red;">*</span> :
                                    </label>
                                    <div class="col-sm-8">
                                        <input ng-keypress="checkIfEnterKeyWasPressed($event, UserModel)" id="txt_password" ng-model="UserModel.Password" type="password" class="form-control" />
                                        <span ng-show="ErrorUserModel.Password" class="help-block">{{ErrorUserModel.Password}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <button ng-click="OnLogin(UserModel)" class="btn btn-primary"><i class="fa fa-unlock"></i> เข้าสู่ระบบ</button>
                            </div>
                        </div>
                        <div class="row p-t-20">
                            <div class="col-xs-6">
                                <img class="login-img" src="~/Images/mma-logo.jpg" />
                            </div>
                            <div class="col-xs-6">
                                <img class="login-img" src="~/Images/scg-home-og.jpg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript">
        var UserViewModel = @Html.Raw(Json.Encode(ViewData["UserViewModel"]));
        var UserModel = @Html.Raw(Json.Encode(ViewData["UserModel"]));
    </script>

    <script type="text/javascript" src="@Url.Content("~/Scripts/Login/loginController.js")"></script>
}